<h1>フォロー一覧</h1>
<%= flash[:success] %>
<br>
<%= link_to "フォローの追加", new_teacher_follow_path %>
<br>
<%= link_to "項目一覧に戻る", teacher_index_path %>
<br>

<table border="1">
  <tr>
    <th>フォロー状況</th>
    <th></th>
    <th></th>
  </tr>
<% @follows.each do |follow| %>
  <tr>
    <td><%= follow.virtual_user_name %> が <%= follow.follower_name %> をフォローしています</td>
    <td><%= link_to "編集", edit_teacher_follow_path(follow) %></td>
    <td><%= link_to "削除", teacher_follow_path(follow), method: :delete, data: {confirm: "削除しますか？"} %></td>
  </tr>
<% end %>
</table>
